{
  "name": "rougin/fortem",
  "description": "Simple form templates in PHP.",
  "keywords": [ "html-form", "php-form", "php-ui-kit" ],
  "homepage": "https://github.com/rougin/fortem",
  "license": "MIT",
  "authors":
  [
    {
      "email": "rougingutib@gmail.com",
      "homepage": "https://roug.in/",
      "name": "Rougin Gutib",
      "role": "Software Engineer"
    }
  ],
  "require":
  {
    "php": ">=5.3.0",
    "staticka/staticka": "~0.4"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*"
  },
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Fortem\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Fortem\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
